      <a
        href="https://www.flaticon.es/iconos-gratis/facebook"
        title="facebook iconos"
        target="_blank"
        >Facebook iconos creados por Hight Quality Icons - Flaticon</a
      >
      <a
        href="https://www.flaticon.es/iconos-gratis/youtube"
        title="youtube iconos"
        target="_blank"
        >Youtube iconos creados por Md Tanvirul Haque - Flaticon</a
      >
      <a
        href="https://www.flaticon.es/iconos-gratis/whatsapp"
        title="whatsapp iconos"
        target="_blank"
      >
        Whatsapp iconos creados por Indygo - Flaticon
      </a>
    </section>
  </footer>
</article>

<script>
  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const iframe = document.createElement("iframe");
        iframe.src = entry.target.dataset.src;
        iframe.title = "Carrera 14 # 15-80, Sogamoso,Colombia";
        iframe.ariaLabel = "Carrera 14 # 15-80, Sogamoso,Colombia";
        iframe.setAttribute("class", "w-full h-[350px]");
        entry.target.appendChild(iframe);
        observer.unobserve(entry.target);
      }
    });
  });

  const element = document.getElementById("mapFrame");
  if (element) {
    observer.observe(element);
  }
</script>

<style>
  #contacto h1 {
    color: #091b49;
    letter-spacing: 12px;
    text-shadow: 0px 0px 10px #908f95;
  }

  .footer-location ul li {
    margin-bottom: 50px;
  }

  div a {
    width: 40px;
    height: 40px;
    overflow: hidden;
  }

  div a img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .acknowledgements {
    background-color: #eeeeee;
  }

  .acknowledgements a {
    color: #4b4f58;
  }
</style>
