---
import Header from "../components/Header.astro"
import FloatingButton from "../components/FloatingButton.astro"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/engeo-icon.png" />
		<link rel="apple-touch-icon" href="/engeo-icon.png">
		<meta name="msapplication-TileImage" content="/engeo-icon.png">
		<meta name="generator" content={Astro.generator} />
		<title>{ title } - ENGEO </title>
	</head>
	<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.0.0/dist/flowbite.min.js" defer></script>
	<body>
		<Header />
		<slot />
		<FloatingButton page={title}/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: Arial, Helvetica, sans-serif;
	}
</style>
